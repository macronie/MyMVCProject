@model IEnumerable<MyMVCProject.Models.Reader>

@{
    ViewBag.Title = "ReaderList";
}

<h2>ReaderList</h2>

<p>
    @Html.ActionLink("Create New Reader", "Reader", "Reader")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReaderName)
           
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ReaderName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReaderId }) |
            @Html.ActionLink("Details", "ReaderDetails", new { id = item.ReaderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ReaderId })
        </td>
    </tr>
}

</table>
